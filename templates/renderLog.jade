!!! 5
html
  head
    link(rel="stylesheet", href="/log.css", type="text/css")
    title #{url} - Chat history
  body
    h1 #{url} - Chat history
    #range
      span#start= start
      span#to &nbsp;to&nbsp; 
      span#end= end
    #controls
      - if (offset === 0) {
      input(type="button", id="previous", value="previous", disabled="true")
      input(type="button", id="next", value="next")
      - } 
      - else if (messages.length === amount) {
      input(type="button", id="previous", value="previous")
      input(type="button", id="next", value="next")
      - } else { 
      input(type="button", id="previous", value="previous")
      input(type="button", id="next", value="next", disabled="true")
      - }
  table.log(cellSpacing=0, cellPadding=0)
    - each message in messages
        tr.logEntry      
          td.name= message.name
          td.time= message.time
          td.msg= message.msg
    script(src="http://documentcloud.github.com/underscore/underscore-min.js");
    script(src="/log.js")
      
